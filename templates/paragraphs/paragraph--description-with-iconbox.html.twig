{% set bgcolor = content.field_background_color.0|raw %}

{% block paragraph %}
	<div class="description-with-iconbox {{ content.field_small_icon[0] }} {{ content.field_icons_left_in_desktop[0] }} {{ content.field_icons_centred_in_mobile[0] }} {{ content.field_text_colors[0] }} {{ content.field_better_for_planet[0] }}" style="background-color: #{{ bgcolor }};">


		{% block content %}
			<div class="container">
				{% if content.field_description[0] is not empty %}
					<div class="description">{{ content.field_description }}</div>
				{% endif %}
				{% if content.field_iconbox[0] is not empty %}
					<div class="iconbox-wrapper number-of-icon-in-row-{{ content.field_number_of_icons_in_row[0] }}">
						{% for key, iconbox in content.field_iconbox if key|first != '#' %}
							{{ iconbox }}
						{% endfor %}
					</div>
				{% endif %}
				{% if content.field_link[0] is not empty %}
					<div class="button-link">
						<a href="{{ content.field_link[0]['#url'] }}" {% if content.field_link['#options']['external'] %} target=" _blank" {% endif %} class="btn btn-white-arrow">
							{{ content.field_link[0]['#title'] }}
						</a>
					</div>
				{% endif %}
			</div>
		{% endblock %}
	</div>
{% endblock paragraph %}
