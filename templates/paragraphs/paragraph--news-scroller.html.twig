{% block paragraph %}
	<div class="news-scroller{{halfPageBanner}}">
		{% block content %}
			<div class="container">
				{% if content.field_description[0] is not empty %}
					<div class="description">{{ content.field_description }}</div>
				{% endif %}
				<div class="news-article-wrapper">{{ content.field_news_article }}</div>
			</div>
		{% endblock %}
	</div>
{% endblock paragraph %}
