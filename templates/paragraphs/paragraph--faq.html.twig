{%
  set classes = [
    'paragraph',
    'paragraph--type--' ~ paragraph.bundle|clean_class,
    view_mode ? 'paragraph--view-mode--' ~ view_mode|clean_class,
    not paragraph.isPublished() ? 'paragraph--unpublished'
  ]
%}
{% block paragraph %}
	<div{{attributes.addClass(classes)}}>
		{% block content %}
			<div class="paragraph-content">
				<div class="container">
					{% if content.field_title[0] is not empty %}
						<h2 class="title">{{ content.field_title }}</h2>
					{% endif %}
					{% if content.field_description[0] is not empty %}
						<div class="description">{{ content.field_description }}</div>
					{% endif %}
					{% if content.field_field_faq_accordion[0] is not empty %}
						<div class="faq-accordion">
							{{ content.field_field_faq_accordion }}
						</div>
					{% endif %}
				</div>
			</div>
		{% endblock %}
	</div>
{% endblock paragraph %}
